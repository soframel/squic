<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.soframel.squic.quiz.automatic.CalculationQuestions" table="CalculationQuestions">
        <id name="id" type="string" column="id">
            <generator class="native"/>
        </id>
        <property name="maxValue" column="maxValue" type="int"/>
        <property name="minValue" column="minValue" type="int"/>
        <property name="nbRandom" column="nbRandom" type="int"/>
        <property name="nbOperands" column="nbOperands" type="int"/>
        <property name="operator" column="operator" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.soframel.squic.quiz.automatic.Operator</param>
                <param name="type">1</param>
            </type>
        </property>
    </class>
</hibernate-mapping>