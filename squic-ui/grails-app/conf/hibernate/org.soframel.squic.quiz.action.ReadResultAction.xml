<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.soframel.squic.quiz.action.ReadResultAction" table="ReadResultAction">
        <id name="id" type="string" column="id">
            <generator class="native"/>
        </id>
        <set name="items" table="ReadResultActionItem">
            <key column="id"></key>
            <composite-element class="org.soframel.squic.quiz.action.ReadActionItem">
                 <property name="actionKind" column="actionKind" not-null="true">
                     <type name="org.hibernate.type.EnumType">
                         <param name="enumClass">org.soframel.squic.quiz.action.ReadActionItem$ActionKind</param>
                         <param name="type">1</param>
                     </type>
                 </property>
                 <property name="text" column="text" type="string" not-null="false"/>
            </composite-element>
        </set>
    </class>
</hibernate-mapping>