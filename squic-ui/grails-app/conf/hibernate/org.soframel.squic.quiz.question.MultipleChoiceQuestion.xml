<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.soframel.squic.quiz.question.MultipleChoiceQuestion" table="MultipleChoiceQuestion">
        <id name="id" type="string" column="id">
            <generator class="native"/>
        </id>
        <discriminator column="questionType" type="string"/>
        <property name="level" column="level" not-null="false">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.soframel.squic.quiz.Level</param>
                <param name="type">1</param>
            </type>
        </property>
        <property name="nbRandomResponses" type="int" not-null="false"/>
        <bag name="possibleResponses" table="PossibleResponse">
            <key column="id"/>
            <many-to-many column="responseId"
                          class="org.soframel.squic.quiz.response.MultipleChoiceResponse"/>
        </bag>
        <bag name="correctIds" table="CorrectId">
            <key column="id"/>
            <element column="correctId" type="string"/>
        </bag>
        <subclass name="org.soframel.squic.quiz.question.MultipleChoiceTextQuestion" discriminator-value="text">
            <property name="text" type="string"/>
        </subclass>
        <subclass name="org.soframel.squic.quiz.question.MultipleChoiceTextToSpeechQuestion" discriminator-value="tts">
            <property name="text" type="string"/>
        </subclass>
        <subclass name="org.soframel.squic.quiz.question.MultipleChoiceSpokenQuestion" discriminator-value="spoken">
            <component name="speechFile" class="org.soframel.squic.quiz.media.SoundFile">
                <property name="file" type="string"/>
            </component>
        </subclass>
    </class>
</hibernate-mapping>