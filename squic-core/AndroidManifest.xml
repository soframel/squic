<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.soframel.android.squic"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="14" />
    <application
        android:label="SquicCoreApplication" android:name="org.soframel.android.squic.SquicApplication">
        <activity
            android:name="org.soframel.android.squic.SquicMainActivity"
            android:label="SquicMainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.soframel.android.squic.PlayQuizActivity" 
            android:label="PlayQuizActivity"
           android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity android:name="org.soframel.android.squic.points.ShowPointsActivity"
                  android:label="ShowPointsActivity"
                  android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>


</manifest>
